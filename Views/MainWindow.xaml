<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" mc:Ignorable="d" x:Class="Device_Library_WPF.Views.MainWindow"
        Title="Device Library"
        Width="980" Height="660"
        WindowStartupLocation="CenterScreen"
        Background="{StaticResource BgBrush}"
        Foreground="{StaticResource TextBrush}"
        ResizeMode="CanMinimize"
        Loaded="Window_Loaded">

    <Grid Margin="{StaticResource P_Window}">
        <Grid.RowDefinitions>
            <RowDefinition Height="31"/>
            <RowDefinition Height="9"/>
            <RowDefinition Height="18"/>
            <RowDefinition/>
            <RowDefinition Height="7"/>
            <RowDefinition Height="Auto" MinHeight="28"/>
        </Grid.RowDefinitions>

        <!-- Верхний бар -->
        <Grid Grid.Row="0" Grid.RowSpan="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="24"/>
                <ColumnDefinition/>
                <ColumnDefinition Width="10"/>
                <ColumnDefinition Width="Auto" MinWidth="81"/>
            </Grid.ColumnDefinitions>

            <StackPanel Grid.Column="0">
                <TextBlock Text="Device Library" FontSize="16" FontWeight="SemiBold"/>
                <TextBlock Text="by Akairoshi" Opacity="0.85" Margin="0,4,0,0"/>
            </StackPanel>

            <!-- Поиск -->
            <TextBox Grid.Column="2"
                     Style="{StaticResource RoundedTextBox}"
                     VerticalAlignment="Center"
                     Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}"
                     FontSize="14" Height="36">
                <TextBox.InputBindings>
                    <KeyBinding Key="Enter"
                        Command="{Binding SearchCommand}" />
                </TextBox.InputBindings>
                <TextBox.ToolTip>
                    <TextBlock Text="Enter device to search ..." />
                </TextBox.ToolTip>
            </TextBox>
            <Button Grid.Column="4"
                    Style="{StaticResource PillButton}"
                    VerticalAlignment="Center"
                    Content=" Search "
                    Command="{Binding SearchCommand}"
                    Width="100"
                    Height="40"/>
        </Grid>
        <Border Grid.Row="3"
                Background="{StaticResource SurfaceBrush}"
                CornerRadius="{StaticResource R_Outer}"
                Padding="20"
                BorderBrush="{StaticResource BorderBrushSoft}"
                BorderThickness="1">

            <ListBox ScrollViewer.CanContentScroll="True"
                    VirtualizingPanel.ScrollUnit="Pixel"
                    VirtualizingPanel.IsVirtualizing="True"
                    VirtualizingPanel.VirtualizationMode="Recycling"
                    ItemsSource="{Binding Devices}"
                    Style="{StaticResource DevicesListBoxStyle}"
                    ItemContainerStyle="{StaticResource DeviceListBoxItemStyle}"
                    ItemTemplate="{StaticResource DeviceItemTemplate}"/>
        </Border>


        <!-- нижняя кнопка добавления -->
        <Button Grid.Row="5"
                Style="{StaticResource PillButton}"
                Content="Add new device"
                Command="{Binding AddDeviceCommand}"
                Background="#1EFFFFFF"
                Padding="20,14"/>
    </Grid>
</Window>
